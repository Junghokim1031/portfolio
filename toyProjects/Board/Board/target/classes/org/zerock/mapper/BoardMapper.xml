<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.BoardMapper">

<!-- REMINDER : THERE SHOULD BE NO SEMI-COLON ON THIS PAGE -->

	<sql id="criteria">
		<trim prefix="(" suffix=") AND " prefixOverrides="OR">
			<foreach item='type' collection="typeArr">
				<!-- For each, add OR to start of each search -->
				<trim prefix="OR">
					<choose>
						<!-- Title -->
						<when test="type == 'T'.toString()">
							title like '%'||#{keyword}||'%'
						</when>
						<!-- Content -->
						<when test="type == 'C'.toString()">
							content like '%'||#{keyword}||'%'
						</when>
						<!-- Writer -->
						<when test="type == 'W'.toString()">
							writer like '%'||#{keyword}||'%'
						</when>
						<!-- But There is an additional OR at start that goes aginst syntax!!! -->
						<!-- prefixOverrides="OR" -> Delete the first OR that occurs, so ok! -->
					</choose>
				</trim>
			</foreach>
		</trim>
	</sql>

	<select id="getList" resultType="org.zerock.domain.BoardVO">
		<![CDATA[
		select * from tbl_board where bno > 0 
		]]>
	</select>
	
	<select id="getListWithPaging" resultType="org.zerock.domain.BoardVO">
		<![CDATA[
			select bno, title, writer, regdate, updateDate, replyCnt 
			from	( select /*+INDEX_DESC(tbl_board pk_board) */ 
						rownum rn, bno, title, writer, regdate, updateDate, replyCnt 
						from tbl_board 
						where
		]]>
		
		<include refid="criteria"></include>
		
		<![CDATA[    
			rownum <= #{pageNum} * #{amount}
			)
		where rn > (#{pageNum} -1) * #{amount}   
		]]>
	</select>

	<insert id="insert">
		insert into tbl_board (bno, title, content, writer) 
		values (seq_board.nextval, #{title}, #{content}, #{writer})
	</insert>
	
	<insert id="insertSelectKey">
		<!-- Save the BNO from db into bno -->
		<selectKey keyProperty="bno" order="BEFORE" resultType="long">
			select seq_board.nextval from dual
		</selectKey>
		
		insert into tbl_board (bno, title, content, writer) 
		values (#{bno}, #{title}, #{content}, #{writer})
		<!-- Now, the BNO will be saved in BoardVO -->
		<!-- Why? resultType="org.zerock.domain.BoardVO" -->
	</insert>
	
	<select id="read" resultType="org.zerock.domain.BoardVO">
		select * from tbl_board where bno=#{bno}
	</select>
	
	<update id="update">
		update tbl_board 
		set 
		title = #{title}, 
		content = #{content},
		writer = #{writer},
		updateDate = sysdate
		where bno = #{bno}
	</update>
	
	<delete id="delete">
		delete from tbl_board where bno = #{bno}
	</delete>
	
	<select id="getTotalCount" resultType="int">
		select count(*) from tbl_board where 
			<include refid="criteria"></include>
		bno > 0		
	</select>
	
	<!-- When we add one, amount =  1 -->
	<!-- When we sub one, amount = -1 -->
	<update id="updateReplyCnt">
		update tbl_board set replyCnt = replyCnt + #{amount} where bno = #{bno}
	</update>
</mapper>
